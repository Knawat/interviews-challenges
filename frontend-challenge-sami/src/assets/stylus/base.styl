// Some resets
html
  font-size: 16px
  box-sizing: border-box
  font-family: 'Lato', 'sans-serif'

  @media only screen and (max-width: 650px)
    font-size: 14px

*, *:before, *:after
  padding: 0
  margin: 0
  box-sizing: inherit

html, body
  height: 100%

ol, ul
  list-style: none

a, button
  cursor: pointer

a
  text-decoration: none

button
  border: none
  background: none

// Utilities
.container
  width: 85%
  max-width: 1100px
  margin: 0 auto

.page-title
  margin-bottom: 2rem
  color: $primary
  text-align: center
  font-size: 2rem

  @media only screen and (max-width: 960px)
    font-size: 1.5rem

.button
  display: block
  padding: 0.5rem 1rem
  background: $secondary
  color: $primary
  border-radius: $border-radius
  text-align: center
  font-size: 1rem
  font-weight: bold
  transition: background 200ms ease

  &:hover, &:focus
    background: lighten($secondary, 20%)
