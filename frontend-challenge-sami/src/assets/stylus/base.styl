html 
  font-size: 16px
  box-sizing: border-box
  font-family: 'Roboto', 'sans-serif'

  @media only screen and (max-width: 650px)
    font-size: 14px

*, *:before, *:after
  padding: 0
  margin: 0
  box-sizing: inherit

ol, ul
	list-style: none

a, button
  cursor: pointer

a
  text-decoration: none

button
  border: none
  background: none

.container 
  width: 85%
  max-width: 1100px
  margin: 0 auto

.page-title
  margin-bottom: 2rem
  color: $turquoise
  text-align: center